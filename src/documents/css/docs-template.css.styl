/* General styling */
docs-fonts ?= "OpenSans-Light", Arial, Helvetica;
docs-header-font ?= "RobotoSlab";
button-focus ?= 0.2rem solid #0000CB;
link-color ?= #0000CB;
link-hover-color ?= #fff;
link-hover-background ?= #0000CB;
site-width ?= 80rem; // the width of the entire site.
site-border ?= 0.1rem solid #ccc; // the borders that appear when site-width exceeded.

/* Main Content Area */
docs-body-background ?= #fff;
docs-content-note-border ?= #000;

/* Header and Footer */
header-footer-color ?= #000;
header-footer-background ?= #C5E0C5;
header-footer-link ?= #00444D;
header-footer-hover-color ?= #fff;
header-footer-hover-background ?= #00444D;
header-footer-focus ?= 0.2rem solid #00444D;
header-nav-link ?= #00444D;
header-nav-background ?= #e4eee4;
header-nav-border-top ?= 0.1rem dotted #fff;
header-nav-border-bottom ?= 0.1rem solid #cfcfcf;
header-menu-border ?= 0.2rem solid #cfcfcf;

/* Skip Links */
skip-color ?= #00444D;
skip-background ?= #C5E0C5;
skip-focus-outer-border ?= #00444D;
skip-focus-inner-border ?= #C5E0C5;
skip-hover-color ?= #C5E0C5;
skip-hover-background ?= #00444D;

/* Logo */
logo-color ?= #00444D;
logo-background ?= #C5E0C5;
logo-hover-color ?= #C5E0C5;
logo-hover-background ?= #00444D;
logo-focus ?= 0.2rem solid #00444D;
logo-font-path ?= "../fonts/logo";
logo-unicode ?= "\e91f";

/* Table of Contents Sidebar */
topics-background ?= #efefef;
topics-item-color ?= #000;
topics-active-color ?= #efefef;
topics-active-background ?= #000;
topics-item-hover-color ?= #000;
topics-item-hover-background ?= #efefef;
topics-item-hover-border ?= 0.2rem solid #000;
topics-border-color ?= #cfcfcf;

/* Table of Contents Hide-Show ribbon */
hideShow-background ?= #efefef;
hideShow-color ?= link-color;
hideShow-focus ?= 0.2rem solid link-color;
hideShow-hover-color ?= #efefef;
hideShow-hover-background ?= link-color;

/* Article Body area */
articleBody-color ?= #000;
articleBody-background ?= #fff;

figure-caption-border ?= #fff;
figure-background ?= #efefef;

/* Code Blocks */
code-block-background ?= #efefef;
code-block-border ?= 0.1rem dotted #ddd;
code-block-color ?= #000;
code-block-link-color ?= #0000CB;

/* Tables */
table-border-color ?= #e7e7e7;

/* UIO Table of Contents */
uio-topics-background ?= #efefef;

/* Transition Time */
// use the same time on transitions so everything moves the same time.
transitionTime ?= 0.5s;

/* Mixins */
// generate the ribbon "tail" of the hideShow ribbon.
contrastHideShowRibbonColor(foreground, background) {
    border-bottom: 2.2rem solid foreground;
    border-right: 2.1rem solid background;
    border-top: 2.2rem solid foreground;
}

@font-face {
    font-family: "OpenSans";
    src: url("../fonts/OpenSans-Regular.ttf") format('truetype');
}

@font-face {
    font-family: "OpenSans-Bold";
    src: url("../fonts/OpenSans-Bold.ttf") format('truetype');
}

@font-face {
    font-family: "RobotoSlab";
    src: url("../fonts/RobotoSlab-Regular.ttf") format('truetype');
}

@font-face {
    font-family: "RobotoSlab-Bold";
    src: url("../fonts/RobotoSlab-Bold.ttf") format('truetype');
}

@font-face {
    font-family: "github";
    src: url("../fonts/github-1.eot#iefix") format("embedded-opentype"),
         url("../fonts/github-1.ttf"),
         url("../fonts/github-1.eot");
}

@font-face {
    font-family: "logo";
    src: url(logo-font-path + ".eot#iefix") format("embedded-opentype"),
         url(logo-font-path + ".ttf"),
         url(logo-font-path + ".eot");
}

html body {
    font-size: 12px;
    font-size: 1.2rem;
    line-height: 1.6;
    font-family: docs-fonts;
}

.docs-template-container {
    background-color: docs-body-background;
    display: -webkit-flex;
    -webkit-flex-wrap: wrap;
    display: flex;
    flex-wrap: wrap;
    max-width: site-width;
}

.docs-template pre {
    white-space: pre-wrap;
}

.docs-template td {
    vertical-align: top;
}

.docs-template a {
    color: link-color;
    text-decoration: underline;
}

/* override foundation, so UIO's line-spacing will work */
.docs-template h1, .docs-template h2, .docs-template h3, .docs-template h4, .docs-template h5, .docs-template h6,
.docs-template p,
.docs-template table tbody tr td,
.docs-template table tr td,
.docs-template ul,
.docs-template dl {
   line-height: inherit;
}

.fl-prefsEditor-buttons button:focus,
.docs-template a:focus {
    outline: button-focus;
}

/* Skip links */
#skip {
    float: left;
    height: 0rem;
}

#skip a {
    color: skip-color;
    background: skip-background;
}

#skip a,
#skip a:hover,
#skip a:visited {
    height: 1px;
    left: -10000px;
    overflow: hidden;
    position: absolute;
    top: auto;
    width: 1px;
    color: skip-hover-color;
    background: skip-hover-background;
}

#skip a:active,
#skip a:focus {
    height: auto;
    width: auto;
    left: auto;
    border: 0.5rem solid skip-focus-inner-border;
    outline: 0.2rem solid skip-focus-outer-border;
    color: skip-hover-color;
    background: skip-hover-background;
    padding: 1rem;
    z-index: 1;
}

.docs-template-skip-topics {
    display: none;
}

.docs-core-sidebar-visibility .docs-template-skip-topics {
    display: initial;
}

/* Header and Footer */
.docs-template-header,
.docs-template-footer {
    background-color: header-footer-background;
    color: header-footer-color;
    font-family: docs-fonts;
}

.docs-template-header p,
.docs-template-footer p {
    margin-bottom: 0;
}

.docs-template-header a,
.docs-template-footer a {
    color: header-footer-link;
}

.docs-template-header a:focus,
.docs-template-footer a:focus {
    outline: header-footer-focus;
}

.docs-template-header a:hover,
.docs-template-footer a:hover {
    color: header-footer-hover-color;
    background: header-footer-hover-background;
}

.docs-template-header {
    font-size: 1.1rem;
    text-align: right;
    line-height: 2;
    max-width: 100%;
}

.docs-template-header a {
    text-decoration: none;
}

.docs-template-header .inline-list {
   margin-bottom: 0;
   overflow: initial;
}

.docs-template-header .docs-template-logo {
    font-size: 1.6rem;
    letter-spacing: 0.2rem;
    margin-bottom: 0.7rem;
    text-align: left;
    background: logo-background;
}

.docs-template-header .docs-template-logo a {
    padding: 1rem;
    color: logo-color;
}

.docs-template-header .docs-template-logo a:hover {
    background: logo-hover-background;
    color: logo-hover-color;
}

.docs-template-header .docs-template-logo a:focus {
    outline: logo-focus;
}

.docs-template-header .docs-template-logoText:before {
    font-family: "logo";
    content: logo-unicode;
    font-size: 2rem;
    text-align: bottom;
    padding-right: 0.2rem;
}

.docs-template-header nav {
    padding: 0.2rem 1rem;
    background-color: header-nav-background;
    border-top: header-nav-border-top;
    border-bottom: header-nav-border-bottom;
}

.docs-template-header nav.show-for-small-only {
    background: header-footer-background;
    border: none;
    padding: 0;
}

.docs-template-header nav li {
    padding-bottom: 0.2rem;
}

.docs-template-header nav a {
    color: header-nav-link;
    padding: 0.2rem 1rem;
    margin: 0;
}

.docs-template-nav-mobile {
    padding: 0 0.5rem;
}

.docs-template-nav-mobile-icon:before {
    content: "\2630";
    font-size: 1.5rem;
    font-weight: bold;
    display: inline-block;
}

.docs-template-dropDown .ui-menu-item {
    padding-bottom: 0.3rem;
}

.docs-template-footer {
    padding: 2rem 0;
    font-size: 1.1rem;
    text-align: center;
    max-width: 100%;
}

.docs-template-footer p {
    font-size: 0.8rem;
}

/* Main body area - contains sidebar and article, excludes header and footer */
.docs-template-mainBody {
    margin: 0;
    position: relative;
}

/* the article body */
.docs-template-articleBody  {
    padding: 5.5rem 2rem 6rem 2rem;
    color: articleBody-color;
    background: articleBody-background;

    //////////////////////////////////////////////////////////////
    // FLUID-5732.
    // transition: width transitionTime;

    // make article wider to take more room.
    width: 91.66%;
}

.docs-core-sidebar-visibility .docs-template-articleBody {
    // put width back to the same as Foundation's medium-8
    width: 70%;

    //////////////////////////////////////////////////////////////
    // FLUID-5732.
    // transition: width transitionTime;
}

.docs-template-articleBody * {
    font-size: 1.2rem;
}

.docs-template-articleBody ul,
.docs-template-articleBody ol {
    margin: 0 2.5rem;
}

.docs-template-articleBody li {
    margin: 0.4rem 0 ;
}

.docs-template-articleBody a:hover {
    color: link-hover-color;
    background: link-hover-background;
}

.docs-template-articleBody pre code {
    font-weight: normal;
    border: code-block-border;
    border-radius: 0.2rem;
    padding: 0.8rem;
    margin-bottom: 1rem;
}

.docs-template-articleBody code {
    font-weight: normal;
    color: code-block-color;
    background-color: code-block-background;
    font-size: inherit;
}

.docs-template-articleBody code a,
.docs-template-articleBody a code {
    font-size: inherit;
    border-bottom: 0.1rem dotted code-block-link-color;
    color: code-block-link-color;
    background: 0;
}

.docs-template-articleBody table td {
    border: 1rem solid table-border-color;
}

/* Topics list */
.docs-template-topics-container {
    background: topics-background;
    border-right: 0.2rem solid topics-border-color;

    /////////////////////////////////////////////
    // FLUID-5732. We only want this added after page load.
    // transition: width transitionTime;
    /////////////////////////////////////////////

    flex-grow: 0;
    -webkit-flex-grow: 0;

    // hide the topics initially
    overflow: hidden;
    padding-right: 0;
    padding-left: 0;
    width: 1px;
}

.docs-template-topics-container a {
    text-decoration: none;
}

.docs-core-sidebar-visibility .docs-template-topics-container {
    overflow: auto;
    padding: 1.5rem;
    width: 25%; // put width back to the same as Foundation's medium-3

    //////////////////////////////////////////////////////////////
    // FLUID-5732. Uncomment this once FLUID-5732 above is fixed.
    // transition: width transitionTime;
    //////////////////////////////////////////////////////////////

    flex-grow: 2;
    -webkit-flex-grow: 2;
}

.docs-core-sidebar-visibility .docs-template-topics {
    display: initial; // restore tabbability of topics
}

.docs-template-topics-hideShow {
    line-height: 2.3rem !important; // prevent UIO from changing this.
    margin: -4.4rem 0 0 -2rem;
    padding: 0.5rem;
    min-width: 9rem;
    width: 9rem;
    background: hideShow-background;
    z-index: 1;
}

.docs-template-topics-hideShow:after {
    contrastHideShowRibbonColor(hideShow-background, docs-body-background)
    content: "";
    position:absolute;
    right: 0;
    display:block;
    top: 0;
}

.docs-template-topics-hideShow a {
    color: hideShow-color;
    margin-right: 0rem;
    margin-top: 0rem;
    background: hideShow-background;
    padding: 0.5rem;
    display: inline-block;
}

.docs-template-topics-hideShow a:before {
    content: "\2630";
    font-size: 1.5rem;
    font-weight: bold;
    display: inline-block;
}

.docs-template-topics-hideShow a:hover {
    color: hideShow-hover-color;
    background: hideShow-hover-background;
}

.docs-template-topics-hideShow a:focus {
    outline: hideShow-focus;
}

.docs-template-topics {
    width: 100%;
    display: none;
}

.docs-template-topics a {
    display: inline-block;
}

.docs-template-topics ul {
    list-style-type: none;
}

.docs-template-topics li {
    padding: 0.6rem 0.2rem 0.6rem 0;
}

.docs-template-topics .docs-template-category {
    font-family: 'OpenSans-Bold';
    margin-bottom: 1rem;
    font-weight: bold;
    font-size: 1.6rem;
    word-wrap: break-word;
}

.docs-template-topics .docs-template-sectionName {
    font-weight: normal;
    font-size: 1rem;
    margin:0;
}

.docs-template-topics .docs-template-topics-item {
    padding: 0.2rem;
    border: none;
    color: topics-item-color;
    display:inline-block;
    width:100%;
    text-decoration: inherit;
}

.docs-template-topics a:focus,
.docs-template-topics a:hover {
    color: topics-item-hover-color;
    background: topics-item-hover-background;
    outline: topics-item-hover-border;
    text-decoration: none;
}

.docs-template-topics .docs-template-topics-item.docs-template-topics-active {
    color: topics-active-color;
    background: topics-active-background;
}

/* Main Content Area */
.docs-template-note {
    border-left: solid;
    border-left-width: 0.3rem;
    border-color: docs-content-note-border;
    padding-left: 0.4rem;
    font-style: italic;
    margin-bottom: 2rem;
}

.docs-template-githubLink {
    margin-bottom: 2rem;
}

.docs-template-githubLink a:before {
    display: inline-block;
    vertical-align: bottom;
    font-family: "github";
    content: "\e600";
    font-size: 1.3rem;
    padding-right: 0.5rem;
}

.docs-template-articleBody h1 {
    font-size: 3.0rem;
    font-family: docs-header-font;
}

.docs-template-articleBody h2 {
    font-size: 2.5rem;
    font-family: docs-header-font;
}

.docs-template-articleBody h3 {
    font-size: 1.5rem;
    font-family: docs-header-font;
}

.docs-template-articleBody > p:first-child {
    font-size: 1.4rem;
}

.docs-template-paragraphBullets {
    font-size: 1.3rem;
}

.docs-template-paragraphBullets li {
    padding-bottom: 0.25rem;
}

.docs-template-articleBody figure {
    background: figure-background;
    text-align: center;

    em {
        font-weight: bold;
    }

    figcaption, img {
        padding: 1rem;
    }

    figcaption {
        border-top: 0.2rem solid figure-caption-border;
    }

    figcaption a {
        outline: initial;
        color: link-color;
        background: link-background;
        display: inline;
    }

    figcaption a:hover {
        color: link-hover-color;
        background: link-hover-background;
    }

    img {
        margin: 0;
    }

    a {
        display: block;
    }

    a:hover {
        background: figure-background;
        // override the default link hover style.
    }

    a:hover img {
        outline: 0.2rem solid link-hover-background;
    }
}

/* Infusion UIO */

.fl-prefsEditor-separatedPanel .fl-panelBar .fl-prefsEditor-buttons {
    margin-right: 2rem;
}
.fl-prefsEditor-separatedPanel .fl-prefsEditor-showHide,
.fl-prefsEditor-separatedPanel .fl-prefsEditor-reset {
    font-size: 1.1rem;
    padding-top: 0.5rem;
    height: 2rem;
    margin-bottom: 0.7rem;
}

.docs-template-uio-toc {
    background: uio-toc-background;
}

.docs-template-uio-toc ul {
    list-style-type: none;
}

.docs-template-uio-toc li {
    margin: 0.8rem 0;
}

.docs-template.fl-text-larger .fl-prefsEditor-separatedPanel .fl-prefsEditor-showHide,
.docs-template.fl-text-larger .fl-prefsEditor-separatedPanel .fl-prefsEditor-reset{
    height: 2.5rem;
}
.docs-template.fl-text-larger .fl-prefsEditor-separatedPanel .fl-prefsEditor-showHide {
    min-width: 13rem;
}

