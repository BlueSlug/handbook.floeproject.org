{
    "eslint": {
        "js": {
            "includes": ["./*.js", "./.eleventy.js", "src/**/*.js", "!src/lib/**/*.js"]
        },
        "json": ["./*.json", ".eslintrc.json", ".stylelintrc.json", "./src/**/*.json"]

    },
    "lintspaces": {
        "newlines": {
            "excludes": ["./src/assets/fonts/*.ttf"]
        },
        "jsonindentation": {
            "excludes": ["./src/_data/*.json"]
        }
    },
    "markdownlint": {
        "excludes": ["./src/collections/**/*.md", "./CHANGELOG.md"]
    }
}
